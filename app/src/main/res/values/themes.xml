<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SOPT" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Neutral Key Color -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/gray_900</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/gray_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:colorBackground</item>
        <!-- Font Theme -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.SOPT.HeadLine1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.SOPT.HeadLine2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.SOPT.HeadLine3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.SOPT.HeadLine4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.SOPT.HeadLine5</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.SOPT.SubTitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.SOPT.SubTitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.SOPT.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.SOPT.Body2</item>
    </style>

    <style name="Theme.SOPT.Spalsh" type="Theme.SOPT">
        <item name="android:windowBackground">@color/gray_900</item>
    </style>
</resources>